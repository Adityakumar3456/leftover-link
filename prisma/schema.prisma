generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  clerkId   String   @unique 
  role      String   @default("USER")
  createdAt DateTime @default(now())

  postedItems FoodItem[] @relation("PostedBy")
  claims      Claim[]    // Link to their claims
}

// 2. THE FOOD
model FoodItem {
  id            String    @id @default(uuid())
  title         String
  description   String?
  pickupTime    String
  
  // NEW FIELDS
  contactPhone  String?
  address       String?
  price         Float     @default(0)
  originalPrice Float?
  foodType      String    @default("veg") // veg or non-veg
  deadline      DateTime?
  quantity      Int       @default(1)     // <--- The Quantity Field
  
  status        String    @default("available")
  createdAt     DateTime  @default(now())

  userId        String
  user          User      @relation("PostedBy", fields: [userId], references: [id])

  claims        Claim[]   
}

// 3. THE CLAIM RECORD
model Claim {
  id          String   @id @default(uuid())
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id])

  foodItemId  String
  foodItem    FoodItem @relation(fields: [foodItemId], references: [id])
}