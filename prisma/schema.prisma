generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  clerkId   String   @unique 
  role      String   @default("USER")
  createdAt DateTime @default(now())

  items     FoodItem[] 
}

// 2. THE FOOD
model FoodItem {
  id            String   @id @default(uuid())
  title         String
  description   String?
   

 
  pickupTime    String   

  price           Float     @default(0)       // 0 = Free, >0 = Discounted
  originalPrice   Float?                      // To show "Was $10, Now $2"
  
  // LOCATION & CONTACT
  address         String?                     // New Address Field
  contactPhone    String?   

  image           String?

  // This is the new field for the Timer
  deadline      DateTime? 

  // Status (lowercase is safer)
  status        String   @default("available") 

  createdAt     DateTime @default(now())
 
  
  // Who posted this?
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  claimedByUserId String?
}