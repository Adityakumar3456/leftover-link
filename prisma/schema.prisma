generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. UPDATE USER MODEL
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  clerkId   String   @unique 
  role      String   @default("USER")
  createdAt DateTime @default(now())

  // Items the user POSTED (as a Restaurant)
  postedItems FoodItem[] @relation("PostedBy")

  // Items the user CLAIMED (as a Hungry Person)
  claimedItems FoodItem[] @relation("ClaimedBy")
}

// 2. UPDATE FOOD ITEM MODEL
model FoodItem {
  id            String    @id @default(uuid())
  title         String
  description   String?
  pickupTime    String
  contactPhone  String?
  address       String?
  price         Float     @default(0)
  originalPrice Float?
  foodType      String    @default("veg")
  deadline      DateTime?
  status        String    @default("available")
  createdAt     DateTime  @default(now())

  // RELATION 1: Who Posted it?
  userId        String
  user          User      @relation("PostedBy", fields: [userId], references: [id])

  // RELATION 2: Who Claimed it? (New Link)
  claimedByUserId String?
  claimedBy       User?     @relation("ClaimedBy", fields: [claimedByUserId], references: [id])
}