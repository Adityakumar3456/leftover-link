generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. THE USER
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  clerkId   String   @unique 
  role      String   @default("USER")
  createdAt DateTime @default(now())

  items     FoodItem[] 
}

// 2. THE FOOD
model FoodItem {
  id            String   @id @default(uuid())
  title         String
  description   String?
  price         Float    @default(0) 
  originalPrice Float?
  image         String?  
  pickupTime    String   

  // This is the new field for the Timer
  deadline      DateTime? 

  // Status (lowercase is safer)
  status        String   @default("available") 

  createdAt     DateTime @default(now())
  contactPhone    String?
  
  // Who posted this?
  userId        String
  user          User     @relation(fields: [userId], references: [id])
  claimedByUserId String?
}